{
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"target": "es2016",
		"module": "commonjs",
		"paths": {
			"@controllers/*": ["src/controllers/*"],
			"@models/*": ["src/models/*"],
			"@routes/*": ["src/routes/*"],
			"@utils/*": ["src/utils/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@root/*": ["./*"]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
